<% include ../partials/header %>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script>
      
    </script>
</head>
<body>
        <div class="container">
          
            <% if(forms) { %>
                
            <div class="field">
                <label class="label">Title</label>
                <div class="control">
                    <div class="input"> <%= forms.title%></div>
                </div>
            </div>

            <div class="field">
                <label class="label">Author</label>
                <div class="control">
                    <div class="input"><%= forms.author%></div>
                </div>
            </div>
            <div class="field">
                <label class="label">Date</label>
                <div class="control">
                    <div class="input"> <%=forms.date%>
                        </div>
                </div>
            </div>

            <div class="field">
                <label class="label">Message</label>
                <div class="control">
                    <div class="textarea"><%= forms.detail%></div>
                </div>
            </div>
           
            
                <div class="control">
                    <a href="./update/<%= forms.id%>" class="button is-link" style="background: #000;">수정하기</a>
                    <a href="./delete/<%= forms.id%>" class="button is-link" style="background: #000;" onclick="return confirm('게시글을 삭제하시겠습니까?')">삭제하기</a>
                </div>
                <%}%>

        </div>
  


</body>

</html>