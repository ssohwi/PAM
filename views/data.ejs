<div class="container-fluid px-4">
    <h4 class="mt-4">쓰레기 배출량</h4>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">캔 <%= todayTrash[0] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">유리 <%= todayTrash[1] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">플라스틱 <%= todayTrash[2] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-primary text-white mb-4">
                                        <div class="card-body">쓰레기투입 총합계 <%= todayTrash[3] %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row overflow-hidden">
                                <div class="col-md-6 graph">
                                    <canvas id="todayChart"></canvas>
                                </div>
                                <div class="col-md-6 graph">
                                    <canvas id="monthChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row overflow-hidden">
                                <div class="col-xl-3 col-md-6">
                                    <iframe class="thingspeak"
                                            src="https://thingspeak.com/channels/1396062/charts/1?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&sum=daily&type=line"></iframe>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <iframe class="thingspeak"
                                            src="https://thingspeak.com/channels/1396062/charts/4?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&sum=daily&type=line"></iframe>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <iframe class="thingspeak"
                                            src="https://thingspeak.com/channels/1396062/charts/2?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&sum=daily&type=line"></iframe>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <iframe class="thingspeak"
                                            src="https://thingspeak.com/channels/1396062/charts/3?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&sum=daily&type=line"></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
<!-- todayChart -->
<script>
    var ctx = document.getElementById("todayChart").getContext('2d');
    var todayChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["총합계", "캔", "유리", "플라스틱"],
            datasets: [{
                label: '오늘의 쓰레기 배출량',
                data: [<%= todayTrash[3] %>, <%= todayTrash[0] %>, <%= todayTrash[1] %>, <%= todayTrash[2] %>],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)'
                ],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            maintainAspectRatio: true, // default value. false일 경우 포함된 div의 크기에 맞춰서 그려짐.
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>

