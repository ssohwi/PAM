<div class="container-fluid px-4">
    <h4 class="mt-4"><i class="fas fa-user"></i> &nbsp; <%= email %></h4>
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h6>오늘의 쓰레기</h6>
                            <div class="row">
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-danger text-white mb-4">
                                        <div class="card-body">캔 <%= todayTrash[0] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-danger text-white mb-4">
                                        <div class="card-body">유리 <%= todayTrash[1] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-danger text-white mb-4">
                                        <div class="card-body">플라스틱 <%= todayTrash[2] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-secondary text-white mb-4">
                                        <div class="card-body">쓰레기투입 총합계 <%= todayTrash[3] %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <h6>이번주 쓰레기</h6>
                            <div class="row">
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">캔 <%= weekTrash[0] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">유리 <%= weekTrash[1] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-warning text-white mb-4">
                                        <div class="card-body">플라스틱 <%= weekTrash[2] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-secondary text-white mb-4">
                                        <div class="card-body">쓰레기투입 총합계 <%= weekTrash[3] %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <h6>이번달 쓰레기</h6>
                            <div class="row">
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-primary text-white mb-4">
                                        <div class="card-body">캔 <%= monthTrash[0] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-primary text-white mb-4">
                                        <div class="card-body">유리 <%= monthTrash[1] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-primary text-white mb-4">
                                        <div class="card-body">플라스틱 <%= monthTrash[2] %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6">
                                    <div class="card bg-secondary text-white mb-4">
                                        <div class="card-body">쓰레기투입 총합계 <%= monthTrash[3] %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <div class="row">
                                <table class="table">
                                    <thead class="thead-dark">
                                    <tr>
                                        <th scope="col">날짜</th>
                                        <th>캔</th>
                                        <th>플라스틱</th>
                                        <th>유리</th>
                                        <th>총 투입량</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% monthlyTrash.forEach( function(item){ %>
                                        <tr class="btn-light monthlyRow">
                                            <th scope="row"><%= item._id.year %>-<%= item._id.month %></th>
                                            <td><%= item.can %></td>
                                            <td><%= item.plastic %></td>
                                            <td><%= item.glass %></td>
                                            <td><%= item.total %></td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>