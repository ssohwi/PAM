<div class="container">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center font-weight-bold">로그인</h3>

            <form action="/login" method="post">
                <div class="form-group">
                    <label for="email">이메일</label>
                    <input type="email" class="form-control py-4" name="email" required autofocus>
                </div>
                <div class="form-group">
                    <label for="password">비밀번호</label>
                    <input type="password" class="form-control py-4" name="password" required>
                </div>
                <br>
                <br>
                <div>
                    <button type="submit" class="btn btn-success form-control">확인</button>
                </div>
                <div>
                    <a href="/signup" class="btn btn-light form-control">회원가입</a>
                </div>
            </form>
        </div>
    </div>
</div>