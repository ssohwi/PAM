<div class="container">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center font-weight-bold">회원 정보</h3>
            <br>
            <form action="/profile" method="post">
                <div class="form-group">
                    <label for="email">이메일</label>
                    <input type="email" class="form-control py-4" name="email" value=<%= user.email %> required
                           readonly>
                </div>
                <div class="form-group">
                    <label for="name">이름</label>
                    <input type="text" class="form-control py-4" name="name" value=<%= user.name %> required>
                </div>
                <div class="form-group">
                    <label for="password">비밀번호</label>
                    <input type="password" class="form-control py-4" name="password" placeholder='Enter your password'
                           required>
                </div>
                <div class="form-group">
                    <label for="chPassword">변경할 비밀번호</label>
                    <input type="password" class="form-control py-4" name="chPassword">
                </div>
                <div class="form-group">
                    <label for="chPasswordCheck">변경할 비밀번호 확인</label>
                    <input type="password" class="form-control py-4" name="chPasswordCheck">
                </div>
                <br>
                <br>
                <div>
                    <button type="submit" class="btn btn-success form-control">저장</button>
                </div>
                <div>
                    <a class="small text-success" href="/leave">탈퇴하기</a>
                </div>
            </form>
        </div>
    </div>
</div>