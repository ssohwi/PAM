<div class="container">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center font-weight-bold">회원가입</h3>
            <br>
            <form action="/signup" method="post">
                <div class="form-group">
                    <label for="email">이메일</label>
                    <input type="email" class="form-control py-4" name="email" placeholder='Enter your email' required
                           autofocus>
                </div>
                <div class="form-group">
                    <label for="name">이름</label>
                    <input type="text" class="form-control py-4" name="name" placeholder='Enter your name' required>
                </div>
                <div class="form-group">
                    <label for="password">비밀번호</label>
                    <input type="password" class="form-control py-4" name="password" placeholder='Enter your password'
                           required>
                </div>
                <div class="form-group">
                    <label for="passwordCheck">비밀번호 확인</label>
                    <input type="password" class="form-control py-4" name="passwordCheck"
                           placeholder='Enter your confirmation password' required>
                </div>
                <br>
                <br>
                <div>
                    <button type="submit" class="btn btn-success form-control">확인</button>
                </div>
            </form>
        </div>
    </div>
</div>